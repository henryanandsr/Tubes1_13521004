<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="InitializationController">
    <padding><Insets top="5" bottom="5" left="5" right="5"/></padding>
    <top>
        <GridPane>
            <Label text="Select Player" GridPane.rowIndex="2" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial Bold" size="12"/>
                </font>
            </Label>
            <ComboBox fx:id="options" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity" />
        </GridPane>
    </top>

    <bottom>
        <HBox alignment="CENTER" spacing="5"><padding><Insets top="5"/></padding>
            <VBox>
                <Button text="Next" onAction="#play">
                    <padding><Insets top="5" bottom="5" left="10" right="10"/></padding>
                    <font>
                        <Font name="Arial Bold" size="12"/>
                    </font>
                </Button>
            </VBox>
        </HBox>
    </bottom>
</BorderPane>